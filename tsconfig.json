{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [  
        "src/*",
        "src/{components,views,utils,api,store}/*",
        "src/{views}/*",
        "src/{components,views,utils,api,store}/{encoding}/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/*.d.ts",
    "index.d.ts",
    "src"
  ]
}